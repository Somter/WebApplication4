@model WebApplication4.Models.Admin

@{
    ViewData["Title"] = "Login Admin";
}

<h2>Войти как админ</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<form method="post" asp-action="Login">
    <div class="form-group">
        <label asp-for="Username" class="control-label">Имя</label>
        <input asp-for="Username" class="form-control" required />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PasswordHash" class="control-label">Пароль</label>
        <input asp-for="PasswordHash" type="password" class="form-control" required />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Войти</button>
</form>
