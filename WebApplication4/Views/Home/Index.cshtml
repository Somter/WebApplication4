@model WebApplication4.Models.User

@{
    ViewData["Title"] = "Home Page";
}

@if (Model != null && !Model.IsActive)
{
    <h1>Дождитесь, пока админ вас добавит</h1>
}
else if (Model != null)
{
    <h1>Добро пожаловать, @Model.Username</h1>
}

<a asp-action="Register" asp-controller="Regist" class="btn btn-secondary">Перейти к регистрации</a>
<a asp-action="Login" asp-controller="Regist" class="btn btn-secondary">Вход</a>
