@model WebApplication4.Models.User

@{
    ViewData["Title"] = "Вход";
}

<h2>Вход</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<div class="register-container">
<form method="post" asp-action="Login">
    <div class="form-group">
        <label asp-for="Username" class="control-label">Имя пользователя</label>
        <input asp-for="Username" class="form-control" required />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PasswordHash" class="control-label">Пароль</label>
        <input asp-for="PasswordHash" type="password" class="form-control" required />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Войти</button>
</form>

<p>
    Нет аккаунта? <a href="/Auth/Register">Зарегистрируйтесь здесь</a>
</p>

<p><a href="/Admin/Login">Войти как Админ</a></p>
</div>
